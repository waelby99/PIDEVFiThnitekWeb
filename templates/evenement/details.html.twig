{% extends "fix.html.twig" %}
{% block content %}
        <div class="container-fluid">
                <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Détails sur cet événement</h3></center>
                <div class="row">
                        <div class="col-12">
                                <div class="card">
                                        <div class="card-body">

                                                <h5 style="color: #76838f;">L'événement : {{ events.titre }}, Lieu : {{ events.lieu}}, La date :{{ events.date.format('Y-m-d')}} et le nombre des participants : {{ events.nbparticipants }}</h5>
                                                <p>{{ events.description }} .</p>
                                                <h4 class="card-title">Les sponsors de cet événement : </h4>
                                                <div class="table-responsive">
                                                        <table class="table table-striped table-bordered zero-configuration">
                                                                <thead>
                                                                <tr>
                                                                        <th>ID</th>
                                                                        <th>Nom Sponsor</th>
                                                                        <th>E-mail</th>
                                                                        <th>Date de signature</th>
                                                                        <th>Adresse</th>
                                                                        <th>Montant</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
        {% for c in sponsors %}
                                                                <tr>
                                                                        <td>{{ c.id }}</td>
                                                                        <td>{{ c.sponsor }}</td>
                                                                        <td>{{ c.email }}</td>
                                                                        <td>{{ c.dateSignature.format('Y-m-d') }}</td>
                                                                        <td>{{ c.adresse }}</td>
                                                                        <td>{{ c.montant }} DT</td>
                                                                </tr>
        {% endfor %}
                                                                </tbody>
                                                        </table>
                                                </div>
                                        </div>
                                </div>
                        </div>
                </div>
        </div>

<br>



{% endblock %}