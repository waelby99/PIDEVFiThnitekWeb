{% extends "fix.html.twig" %}
{% block content %}

    <div class="content-body" style="margin-left:-5px">
        <center style="margin-top:20px;margin-bottom:20px"><h3 class="d-inline" style="color:#7571f9;">Liste des événements
                <a href='{{path('add_event')}}' class="btn mb-1 btn-info float-right" style="margin-right: 20px"><i class="mdi mdi-plus"></i><span> Ajouter un événement</span></a>
            </h3></center>
        <div class="row" style="margin-bottom:20px">

            {% for c in events %}
            <div class="col-md-6 col-lg-3" style="margin-bottom: 20px">
                <div class="card" style="margin-left: 20px;margin-right: 20px;">

                    <div class="card-body">
                        <h5 class="card-title">{{ c.titre }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ c.lieu }}</h6>
                        <p class="card-text">{{ c.description }}</p>
                        <p class="card-text d-inline"><small class="text-muted">Nombre de participants :{{ c.nbparticipants }}</small><br>
                        <p class="card-text d-inline"><small class="text-muted">Date d'événement :{{ c.date.format('Y-m-d') }}</small></p>
                        <br><br><a href='{{path('detail_event',{'id':c.id})}}' class="btn mb-1 btn-info float-left" ><i class="mdi mdi-information"></i><span> Détails</span></a>
                        <br><br>
                        <a href='{{path('modif_evenement',{'id':c.id})}}' class="btn mb-1 btn-warning"><i class="mdi mdi-pencil"></i><span> Modifier</span></a>
                        <a href='{{path('delete_evenement',{'id':c.id})}}' class="btn mb-1 btn-danger"><i class="mdi mdi-delete"></i><span> Supprimer</span></a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}